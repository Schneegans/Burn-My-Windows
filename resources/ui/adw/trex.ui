<interface domain="burn-my-windows">

  <object class="AdwExpanderRow" id="trex-prefs">

    <child>
      <object class="AdwActionRow">
        <property name="title" translatable="yes">Animation Time [ms]</property>
        <child>
          <object class="GtkScale">
            <property name="valign">center</property>
            <property name="draw-value">1</property>
            <property name="digits">0</property>
            <property name="value-pos">left</property>
            <property name="width-request">300</property>
            <property name="adjustment">
              <object class="GtkAdjustment" id="trex-animation-time">
                <property name="upper">3000</property>
                <property name="lower">100</property>
                <property name="step-increment">1</property>
                <property name="page-increment">100</property>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="reset-trex-animation-time">
            <property name="icon-name">edit-clear-symbolic</property>
            <property name="valign">center</property>
            <property name="tooltip-text" translatable="yes">Reset to Default Value</property>
            <style>
              <class name="flat" />
            </style>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="AdwActionRow">
        <property name="title" translatable="yes">Claw Scratch Scale</property>
        <child>
          <object class="GtkScale">
            <property name="valign">center</property>
            <property name="draw-value">1</property>
            <property name="digits">1</property>
            <property name="value-pos">left</property>
            <property name="width-request">300</property>
            <property name="adjustment">
              <object class="GtkAdjustment" id="trex-scratch-scale">
                <property name="upper">10</property>
                <property name="lower">0.1</property>
                <property name="step-increment">0.1</property>
                <property name="page-increment">1</property>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="reset-trex-scratch-scale">
            <property name="icon-name">edit-clear-symbolic</property>
            <property name="valign">center</property>
            <property name="tooltip-text" translatable="yes">Reset to Default Value</property>
            <style>
              <class name="flat" />
            </style>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="AdwActionRow">
        <property name="title" translatable="yes">Claw Scratch Count</property>
        <child>
          <object class="GtkScale">
            <property name="valign">center</property>
            <property name="draw-value">1</property>
            <property name="digits">0</property>
            <property name="value-pos">left</property>
            <property name="width-request">300</property>
            <property name="adjustment">
              <object class="GtkAdjustment" id="trex-scratch-count">
                <property name="upper">50</property>
                <property name="lower">1</property>
                <property name="step-increment">1</property>
                <property name="page-increment">10</property>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="reset-trex-scratch-count">
            <property name="icon-name">edit-clear-symbolic</property>
            <property name="valign">center</property>
            <property name="tooltip-text" translatable="yes">Reset to Default Value</property>
            <style>
              <class name="flat" />
            </style>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="AdwActionRow">
        <property name="title" translatable="yes">Warp Effect</property>
        <child>
          <object class="GtkScale">
            <property name="valign">center</property>
            <property name="draw-value">1</property>
            <property name="digits">2</property>
            <property name="value-pos">left</property>
            <property name="width-request">300</property>
            <property name="adjustment">
              <object class="GtkAdjustment" id="trex-scratch-warp">
                <property name="upper">1</property>
                <property name="lower">0</property>
                <property name="step-increment">0.01</property>
                <property name="page-increment">0.1</property>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="reset-trex-scratch-warp">
            <property name="icon-name">edit-clear-symbolic</property>
            <property name="valign">center</property>
            <property name="tooltip-text" translatable="yes">Reset to Default Value</property>
            <style>
              <class name="flat" />
            </style>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="AdwActionRow">
        <property name="title" translatable="yes">Flash Color</property>
        <property name="activatable-widget">trex-scratch-color</property>
        <child>
          <object class="GtkColorButton" id="trex-scratch-color">
            <property name="use_alpha">1</property>
            <property name="show_editor">1</property>
            <property name="width-request">250</property>
            <property name="valign">center</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="reset-trex-scratch-color">
            <property name="icon-name">edit-clear-symbolic</property>
            <property name="valign">center</property>
            <property name="tooltip-text" translatable="yes">Reset to Default Value</property>
            <style>
              <class name="flat" />
            </style>
          </object>
        </child>
      </object>
    </child>

  </object>

</interface>